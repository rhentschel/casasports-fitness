generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  MEMBER
  ADMIN
}

enum ContractType {
  BASIC
  PREMIUM
  VIP
}

model User {
  id            String    @id @default(uuid()) // Matches Supabase Auth ID
  email         String    @unique
  name          String?
  role          Role      @default(MEMBER)

  // Auth & Check-in
  checkInSecret String?   // Secret for TOTP generation (Hardware Interface)

  contract      Contract?
  bookings      Booking[]
  trainingPlans TrainingPlan[]
  checkIns      CheckIn[]
  serviceRequests ServiceRequest[] // Self-Service

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model ServiceRequest {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String   // e.g., "MEMBER_PAUSE", "CONTRACT_CHANGE"
  data      String?  // JSON detail
  status    String   @default("PENDING") // PENDING, APPROVED, REJECTED

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contract {
  id        String       @id @default(cuid())
  userId    String       @unique
  user      User         @relation(fields: [userId], references: [id])
  type      ContractType @default(BASIC)
  status    String       @default("ACTIVE")
  startDate DateTime     @default(now())
  endDate   DateTime?
}

model Booking {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  resource  String   @default("SAUNA") // SAUNA, COURSE
  startTime DateTime
  status    String   @default("CONFIRMED")

  createdAt DateTime @default(now())
}

model TrainingPlan {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  content   String   // JSON or Markdown
  createdAt DateTime @default(now())
}

model CheckIn {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  timestamp DateTime @default(now())
  method    String   @default("QR") // QR, Manual, NFC
}
